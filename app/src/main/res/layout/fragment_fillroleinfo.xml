<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              xmlns:tools="http://schemas.android.com/tools"
              android:id="@+id/linearlayout_fillroleinfo"
              android:layout_width="match_parent"
              android:layout_height="wrap_content"
              android:gravity="center_horizontal"
              android:orientation="vertical"
              android:paddingBottom="@dimen/activity_vertical_margin"
              android:paddingLeft="70dp"
              android:paddingRight="70dp"
              android:paddingTop="@dimen/activity_vertical_margin"
              tools:context="com.iceru.teacherschores.MainActivty" >

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="8dp"
        android:id="@+id/textview_totalroles"
        android:textSize="18sp"
        android:layout_marginLeft="4dp"
        android:layout_marginTop="4dp"
        android:layout_marginRight="4dp"
        android:gravity="center"

        android:visibility="invisible"/>

    <TextView
        android:id="@+id/textview_warning_no_student_info"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/sorry_developing"
        android:textSize="18sp"
        android:gravity="center"/>

    <ListView
        android:id="@+id/listview_roles"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="0.1"
        android:clickable="false"
        android:divider="@null"
        android:dividerHeight="0dp"
        android:longClickable="false"
        tools:listitem="@android:layout/simple_list_item_1"

        android:visibility="invisible">

    </ListView>

    <LinearLayout
        android:id="@+id/linearlayout_roleinputform"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"

        android:visibility="invisible">

        <EditText
            android:id="@+id/edittext_role"
            android:layout_width="160dp"
            android:layout_height="wrap_content"
            android:layout_margin="4dp"
            android:hint="@string/hint_edittext_role"
            android:textSize="18sp"
            android:inputType="text"
            android:imeOptions="actionDone"/>

        <Spinner
            android:id="@+id/spinner_roleconsume"
            android:layout_margin="4dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>

    </LinearLayout>

    <Button
        android:id="@+id/btn_addrole"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_margin="4dp"
        android:background="@drawable/btn_addrole_selector"

        android:visibility="invisible"/>

</LinearLayout>