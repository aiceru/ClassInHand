<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="#FFFFFF"
    tools:context="com.iceru.classinhand.AddPersonActivity">

    <android.support.v7.widget.Toolbar
        android:id="@+id/addpersonactivity_toolbar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="?attr/colorPrimary"
        android:minHeight="?attr/actionBarSize"
        app:theme="@style/ThemeOverlay.AppCompat.ActionBar" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_marginLeft="@dimen/activity_horizontal_margin"
        android:layout_marginRight="@dimen/activity_horizontal_margin"
        android:orientation="vertical"
        android:layout_weight="0.8">

        <Space
            android:layout_width="match_parent"
            android:layout_height="@dimen/recyclerview_singleline_top_padding" />

        <android.support.v7.widget.RecyclerView
            xmlns:android="http://schemas.android.com/apk/res/android"
            android:id="@+id/recyclerview_adding_list"
            android:scrollbars="vertical"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="0.1">

        </android.support.v7.widget.RecyclerView>

        <GridLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:rowCount="2"
            android:columnCount="4">

            <ImageButton
                android:id="@+id/imagebutton_addperson_picture"
                android:layout_width="96dp"
                android:layout_height="96dp"
                android:layout_column="0"
                android:layout_rowSpan="2"
                android:src="@drawable/ic_person_white_48dp"
                android:padding="@dimen/activity_horizontal_margin"/>

            <EditText
                android:layout_column="1"
                android:layout_height="48dp"
                android:layout_gravity="fill_horizontal"
                android:layout_columnWeight="1"
                android:maxLength="3"
                android:gravity="bottom"
                android:textSize="16sp"
                android:textColor="@color/text_secondary"
                android:hint="번호"/>

            <EditText
                android:layout_column="2"
                android:layout_height="48dp"
                android:layout_gravity="fill_horizontal"
                android:layout_columnWeight="1"
                android:gravity="bottom"
                android:textSize="16sp"
                android:hint="성별"/>

            <com.shamanland.fab.FloatingActionButton
                android:layout_gravity="bottom"
                android:layout_rowSpan="2"
                android:src="@drawable/ic_add"
                app:floatingActionButtonColor="@color/fab_color"
                app:floatingActionButtonSize="mini"/>

            <EditText
                android:layout_height="48dp"
                android:layout_columnSpan="2"
                android:layout_gravity="fill"
                android:gravity="bottom"
                android:textSize="16sp"
                android:hint="NAME"/>

        </GridLayout>
    </LinearLayout>

</LinearLayout>