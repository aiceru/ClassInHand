<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingLeft="@dimen/activity_horizontal_oneside_margin"
    android:paddingRight="@dimen/activity_horizontal_oneside_margin">

    <HorizontalScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:scrollbarSize="0dp"
        android:paddingTop="@dimen/activity_horizontal_oneside_margin">
        <TextView
            android:id="@+id/textview_destination"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:singleLine="true"
            android:gravity="left"
            android:textSize="@dimen/recyclerview_singleline_text_font"
            android:textColor="@color/text_secondary"
            android:padding="8dp" />
    </HorizontalScrollView>

    <View
        android:layout_marginLeft="2dp"
        android:layout_marginRight="2dp"
        android:layout_width="match_parent"
        android:layout_height="2dp"
        android:background="@color/accent_material_light"/>

    <EditText
        android:id="@+id/edittext_message"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:minHeight="160dp"
        android:textSize="@dimen/recyclerview_singleline_text_font"
        android:textColor="@color/text_secondary"
        android:hint="@string/hint_edittext_sendmessage"
        android:gravity="top|left"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/activity_horizontal_oneside_margin"
        android:layout_marginBottom="@dimen/activity_horizontal_margin">

        <ImageButton
            android:id="@+id/imagebutton_message_attach"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:src="@drawable/ic_attach_file_grey_500_18dp"
            android:background="@null"/>

        <ImageButton
            android:id="@+id/imagebutton_message_cancel"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:src="@drawable/ic_cancel_grey_500_18dp"
            android:background="@null"/>

        <ImageButton
            android:id="@+id/imagebutton_message_send"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:src="@drawable/ic_send_grey_500_18dp"
            android:background="@null"/>

    </LinearLayout>

</LinearLayout>